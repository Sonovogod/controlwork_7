@model CreateUserViewModel

@{
    ViewBag.Title = "Авторизация/регистрация";
    Layout = "_Layout";
}
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#registration">
    Зарегистрироваться
</button>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#authorization">
    Войти
</button>
<div class="modal fade" id="authorization" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Введите почтовый адрес, чтобы войти</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Authorization" method="post" asp-controller="Users">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="mail">Почтовый адрес</label>
                                    <input asp-for="AuthorUser.Mail"
                                           type="email"
                                           class="form-control"
                                           id="mail"
                                           placeholder="thony.montana@gmail.com">
                                    <span class="text-danger" asp-validation-for="AuthorUser.Mail"></span>
                                </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="registration" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Форма регистрации</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Registration" method="post" asp-controller="Users">
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                                <label for="name">Ваше имя</label>
                                <input asp-for="User.Name"
                                       type="text"
                                       class="form-control"
                                       id="name"
                                       placeholder="Тони">
                                <span class="text-danger" asp-validation-for="User.Name"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="surname">Ваша фамилия</label>
                                <input asp-for="User.Surname"
                                       type="text"
                                       class="form-control"
                                       id="surname"
                                       placeholder="Монтана">
                                <span class="text-danger" asp-validation-for="User.Surname"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="mail">Почтовый адрес</label>
                                <input asp-for="User.Mail"
                                       type="email"
                                       class="form-control"
                                       id="mail"
                                       placeholder="thony.montana@gmail.com">
                                <span class="text-danger" asp-validation-for="User.Mail"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="phone">Номер телефона</label>
                                <input asp-for="User.PhoneNumber"
                                       type="text"
                                       class="form-control"
                                       id="phone"
                                       placeholder="7476028287">
                                <span class="text-danger" asp-validation-for="User.PhoneNumber"></span>
                            </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
            </div>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
